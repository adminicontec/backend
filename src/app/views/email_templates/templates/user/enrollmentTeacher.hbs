                            <tr>
                              <th style="background: #B4BCBC;">Fecha</th>
                              <th style="background: #B4BCBC;">Nro de horas</th>
                            </tr>
                          </thead>
                          <tbody style="font-size: 12px;">
                            <tr>
                              <td>{{this.info.start_date}}</td>
                              <td>{{this.info.duration}}</td>
                            </tr>
                          </tbody>
                        </table>
                      {{/if}}
                      &nbsp;
                    {{/each}}
                    {{#if params.program.observations}}
                      <p>{{params.program.observations}}</p>
                    {{/if}}
                  </td>
                </tr>
              </tbody>
            </table>
            <!--[if mso]>
            </td>
            <![endif]-->

            <!--[if mso]>
