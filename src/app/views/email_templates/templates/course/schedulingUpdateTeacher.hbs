{{> partials/page/title title='Programación modificada'}}
{{> partials/page/image image=params.mailer.mailer_image}}
<tr>
  <td valign="top" class="container">
    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="min-width:100%;">
      <tbody>
        <tr>
          <td valign="top" style="padding-top:9px;">
            <table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%" class="mcnTextContentContainer">
              <tbody>
                <tr>
                  <td valign="top" class="mcnTextContent" style="padding-top:10px; padding-right:18px; padding-bottom:9px; padding-left:18px;">
                    {{#if params.course_name}}
                      <p>El curso {{params.course_name}} del programa {{params.program_name}} con ID de servicio {{params.service_id}} ha sido modificado</p>
                    {{else}}
                      <p>El programa {{params.program_name}} con ID de servicio {{params.service_id}} ha sido modificado</p>
                    {{/if}}
                    {{#each params.changes}}
                      <p>{{{this.message}}}</p>
                    {{/each}}
                    <p class="mcSpecialText">En caso de cualquier inquietud comuníquese con el programador (coordinador del servicio del área de operaciones presencial/online o virtual).</p>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </td>
</tr>
